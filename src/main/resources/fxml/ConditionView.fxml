<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>

<fx:root alignment="CENTER" maxWidth="-Infinity" style="-fx-background-color: transparent; -fx-effect: dropshadow(gaussian,derive(black,75%), 10.0 , 0.0, 0.0 , 0.0);" stylesheets="@../css/ConditionView.css" type="HBox" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Arc id="sourceNode" fx:id="sourceNode" fill="#313644" length="180.0" radiusX="10.0" radiusY="10.0" startAngle="90.0" stroke="TRANSPARENT" strokeType="INSIDE" type="ROUND" />
      <VBox id="statePane">
         <HBox.margin>
            <Insets />
         </HBox.margin>
         <children>
            <HBox style="-fx-background-color: #313644; -fx-border-color: #313644;">
               <children>
                  <TextField fx:id="conditionTextField" text="Condition" />
                  <Button maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" mnemonicParsing="false" style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/cancel.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
               </children>
            </HBox>
            <ScrollPane fitToHeight="true" maxHeight="87.0" minHeight="87.0" prefHeight="87.0" prefWidth="200.0">
              <content>
                  <HBox id="deviceIconHBox" fx:id="deviceIconHBox" alignment="CENTER" spacing="20.0">
                     <children>
                        <Button id="addInputButton" fx:id="addInputButton" maxHeight="-Infinity" maxWidth="50.0" minHeight="50.0" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
                     </padding>
                  </HBox>
              </content>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </ScrollPane>
            <Pane prefHeight="10.0" prefWidth="200.0" style="-fx-background-color: #313644;" />
         </children>
      </VBox>
      <Arc id="destNode" fx:id="destNode" fill="#313644" length="180.0" radiusX="10.0" radiusY="10.0" startAngle="270.0" stroke="TRANSPARENT" strokeType="INSIDE" type="ROUND" />
   </children>
</fx:root>
