<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<fx:root alignment="TOP_RIGHT"  stylesheets="@../css/ConditionView2.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="removeConditionBtn" maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../icons/cancel.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <StackPane maxWidth="210.0" minWidth="210.0">
         <children>
            <ScrollPane fx:id="scrollPane" fitToHeight="true" maxHeight="75.0" maxWidth="-Infinity" minHeight="-Infinity" prefHeight="75.0" prefWidth="190.0" StackPane.alignment="CENTER">
              <content>
                  <HBox id="deviceIconHBox" fx:id="deviceIconHBox" alignment="CENTER" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="55.0" spacing="10.0">
                     <children>
                        <Button id="addInputButton" fx:id="addInputButton" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="50.0" minHeight="50.0" minWidth="-Infinity" mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="5.0" right="5.0" top="15.0" />
                     </padding>
                  </HBox>
              </content>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </ScrollPane>
            <Circle id="sourceNode" fx:id="inPort" fill="#313644" radius="7.0" stroke="WHITE" strokeWidth="5.0" StackPane.alignment="CENTER_LEFT" />
            <Circle id="destNode" fx:id="outPort" fill="#313644" layoutX="20.0" layoutY="48.0" radius="7.0" stroke="WHITE" strokeWidth="5.0" StackPane.alignment="CENTER_RIGHT" />
         </children>
      </StackPane>
   </children>
</fx:root>
