<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root alignment="TOP_CENTER" spacing="10.0" stylesheets="@../css/DeviceSelectorView.css" type="VBox" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints maxHeight="350.0" minHeight="10.0" prefHeight="350.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="300.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="250.0" minHeight="10.0" prefHeight="250.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <TitledPane id="sensor_p" collapsible="false" text="Sensor">
               <content>
                  <ScrollPane fitToWidth="true">
                     <content>
                        <FlowPane fx:id="inputPane" hgap="10.0" vgap="10.0">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                           </padding>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </content>
               <font>
                  <Font name="Segoe UI" size="45.0" />
               </font>
            </TitledPane>
            <TitledPane id="actuator_p" collapsible="false" text="Actuator" GridPane.rowIndex="1">
               <content>
                  <ScrollPane fitToWidth="true">
                     <content>
                        <FlowPane fx:id="outputPane" hgap="10.0" vgap="10.0">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                           </padding>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </content>
            </TitledPane>
            <TitledPane id="connect_p" collapsible="false" text="Connectivity" GridPane.rowIndex="2">
               <content>
                  <ScrollPane fitToWidth="true">
                     <content>
                        <FlowPane fx:id="connectivityPane" hgap="10.0" vgap="10.0">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                           </padding>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </content>
            </TitledPane>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefWidth="300.0" text="Import" GridPane.halignment="CENTER" GridPane.rowIndex="3">
               <font>
                  <Font name="Segoe UI" size="18.0" />
               </font>
            </Button>
         </children>
      </GridPane>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</fx:root>
