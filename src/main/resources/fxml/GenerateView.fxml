<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<fx:root minHeight="600.0" prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/GenerateView.css" type="DialogPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <TabPane minHeight="600.0" prefHeight="600.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="simulateTab" text="Simulate">
               <content>
                  <AnchorPane>
                     <children>
                        <ScrollPane fx:id="diagramScrollPane" maxHeight="470.0" maxWidth="820.0" prefHeight="470.0" prefWidth="820.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0" />
                     </children>
                  </AnchorPane>
               </content>
          </Tab>
          <Tab fx:id="codeDeviceTableTab" text=" Code and DeviceTable">
               <content>
                  <HBox spacing="20.0">
                     <children>
                        <TextArea fx:id="codeTextArea" maxHeight="470.0" prefHeight="470.0" prefWidth="400.0" />
                        <TableView fx:id="deviceTable" maxHeight="470.0" prefHeight="470.0" prefWidth="400.0">
                          <columns>
                              <TableColumn fx:id="nameColumn" editable="false" prefWidth="75.0" text="Name" />
                            <TableColumn fx:id="brandColumn" prefWidth="75.0" text="Brand" />
                            <TableColumn fx:id="modelColumn" prefWidth="75.0" text="Model" />
                              <TableColumn fx:id="pinColumn" prefWidth="75.0" text="Pin" />
                              <TableColumn fx:id="urlColumn" prefWidth="75.0" text="URL" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                  </HBox>
               </content>
          </Tab>
        </tabs>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </TabPane>
   </content>
</fx:root>
