<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<fx:root maxWidth="330" stylesheets="@../css/RightPanel.css" type="VBox" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <VBox id="vBox" fx:id="vBox" spacing="2" VBox.vgrow="NEVER">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>
        <Button id="button" fx:id="configureBtn" maxWidth="Infinity" onAction="#handleConfigureBtn" text="Configure Device">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../css/config-project.png" />
               </image></ImageView>
         </graphic></Button>
        <Button id="button" fx:id="generateBtn" maxWidth="Infinity" onAction="#handleGenerateBtn" text="Generate Project">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../css/generate-project.png" />
               </image></ImageView>
         </graphic></Button>
        <Button id="button" fx:id="uploadBtn" maxWidth="Infinity" onAction="#handleUploadBtn" text="Upload Project">
         <graphic>
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../css/upload-project.png" />
               </image></ImageView>
         </graphic></Button>
    </VBox>
</fx:root>
