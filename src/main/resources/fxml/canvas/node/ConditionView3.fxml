<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>

<fx:root alignment="TOP_RIGHT" stylesheets="@../../../css/canvas/node/ConditionView3.css" type="VBox" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="removeConditionBtn" maxHeight="10.0" maxWidth="10.0" minHeight="10.0" minWidth="10.0" mnemonicParsing="false" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../icons/cancel-2.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <HBox fx:id="conditionPane" alignment="CENTER">
         <children>
            <Arc id="arcNode" fx:id="inPort" length="180.0" radiusX="10.0" radiusY="10.0" startAngle="90.0" strokeType="INSIDE" strokeWidth="0.0" />
            <HBox id="contentPane">
               <children>
                  <ScrollPane id="scrollPane" fx:id="scrollPane" fitToWidth="true" prefHeight="55.0" prefWidth="170.0" style="-fx-background-color: transparent;">
                     <content>
                        <FlowPane fx:id="deviceIconFlowPane" alignment="CENTER_LEFT" columnHalignment="RIGHT" hgap="2.5" maxHeight="55.0" prefHeight="55.0" prefWidth="170.0" vgap="2.5">
                           <padding>
                              <Insets bottom="2.5" left="2.5" top="2.5" />
                           </padding>
                           <children>
                              <Button id="addOutputButton" fx:id="addInputButton" alignment="TOP_LEFT" minHeight="50.0" minWidth="50.0" mnemonicParsing="false" />
                           </children>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
            <Arc id="arcNode" fx:id="outPort" fill="#313644" length="180.0" radiusX="10.0" radiusY="10.0" rotate="180.0" startAngle="90.0" strokeType="INSIDE" strokeWidth="0.0" />
         </children>
      </HBox>
   </children>
</fx:root>
