<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Arc?>

<fx:root stylesheets="@../../../css/ConditionView3.css" alignment="TOP_RIGHT" type="VBox" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="removeConditionBtn" maxHeight="20.0" maxWidth="20.0" minHeight="20.0" minWidth="20.0" mnemonicParsing="false" style="-fx-background-color: transparent;">
         <graphic>
            <ImageView fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../icons/cancel.png" />
               </image>
            </ImageView>
         </graphic>
      </Button>
      <HBox fx:id="conditionPane" alignment="CENTER">
         <children>
            <Arc id="arcNode" fx:id="inPort" length="180.0" radiusX="10.0" radiusY="10.0" startAngle="90.0"/>
            <HBox id="contentPane" stylesheets="@../../../css/ConditionView3.css">
               <children>
                  <ScrollPane id="scrollPane" fx:id="scrollPane" fitToWidth="true" prefHeight="60.0" prefWidth="135.0" style="-fx-background-color: transparent;">
                     <content>
                        <FlowPane fx:id="deviceIconFlowPane" alignment="CENTER_LEFT" columnHalignment="RIGHT" hgap="15.0" maxHeight="60.0" prefHeight="60.0" prefWidth="135.0" vgap="7.5">
                           <padding>
                              <Insets bottom="5.0" left="10.0" right="5.0" top="5.0" />
                           </padding>
                           <children>
                              <Button id="addOutputButton" fx:id="addInputButton" alignment="TOP_LEFT" minHeight="50.0" minWidth="50.0" mnemonicParsing="false" />
                           </children>
                        </FlowPane>
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
            <Arc fx:id="outPort" fill="#313644" length="180.0" radiusX="10.0" radiusY="10.0" startAngle="270.0" stroke="#ffffff00" strokeType="INSIDE" type="ROUND" />
         </children>
      </HBox>
   </children>
</fx:root>
