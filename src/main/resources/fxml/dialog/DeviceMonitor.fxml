<fx:root dividerPositions="0.5" type="SplitPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <items>
      <GridPane hgap="10.0" vgap="10.0">
          <children>
              <Label text="Log Level" />
              <ComboBox fx:id="levelComboBox" GridPane.columnIndex="1" />
              <Label text="Device Tag" GridPane.columnIndex="2" />
              <CheckComboBox fx:id="checkTagComboBox" GridPane.columnIndex="3" />
              <TableView fx:id="deviceMonitorTable" GridPane.columnSpan="5" GridPane.rowIndex="1" />
              <CheckBox fx:id="autoScrollCheckbox" selected="true" text="Auto scroll" GridPane.columnIndex="4" />
          </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
      </GridPane>
      <VBox fx:id="chartPane" prefHeight="200.0" prefWidth="100.0" >
          <children>
              <CheckComboBox fx:id="plotTagComboBox" />
          </children>
      </VBox>
   </items>
</fx:root>
