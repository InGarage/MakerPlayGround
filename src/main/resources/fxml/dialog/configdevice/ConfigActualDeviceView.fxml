<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<fx:root type="DialogPane" prefHeight="500" maxHeight="500" prefWidth="500" maxWidth="500" stylesheets="@../../../css/dialog/configdevice/ConfigActualDeviceView.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER">
            <content>
                <VBox fx:id="allDevice" spacing="20" alignment="CENTER">
                    <padding><Insets top="30" right="30" left="30" bottom="30"/></padding>
                    <children>
                        <Label fx:id="topicConfigDevice" id="topicConfigDevice" text="Customize your Devices"/>
                        <VBox fx:id="platFormAndController" spacing="10">
                            <children>
                                <HBox fx:id="platFormSelected" spacing="65" alignment="TOP_LEFT">
                                    <children>
                                        <HBox fx:id="platFormPicture" spacing="10" alignment="CENTER_LEFT" maxHeight="25">
                                            <children>
                                                <ImageView fx:id="platFormImage" fitHeight="25" fitWidth="25"/>
                                                <Label fx:id="platformName" id="platFormLabel" text="Platform" alignment="CENTER_LEFT" textAlignment="LEFT"/>
                                            </children>
                                        </HBox>
                                        <ComboBox fx:id="platFormComboBox" id="platformComboBox" />
                                    </children>
                                </HBox>
                                <HBox fx:id="entireControllerDevice" id="controllerSelection" spacing="12" alignment="CENTER_LEFT">
                                    <children>
                                        <Label fx:id="controllerName" id="nameLabel" textAlignment="LEFT" alignment="CENTER_LEFT" text="Controller"/>
                                        <ComboBox fx:id="controllerComboBox" id="controllerComboBox"/>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </content>
</fx:root>
