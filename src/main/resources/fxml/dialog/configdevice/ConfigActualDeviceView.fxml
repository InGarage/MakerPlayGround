<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Pane?>
<fx:root stylesheets="@../../../css/dialog/configdevice/ConfigActualDeviceView.css" type="AnchorPane"
         xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="30.0">
            <children>
                <Label id="topicConfigDevice" fx:id="topicConfigDevice" text="Device Configuration"
                       textAlignment="CENTER"/>
                <ScrollPane hbarPolicy="NEVER" maxHeight="600" vbarPolicy="ALWAYS">
                    <VBox alignment="CENTER" spacing="20">
                        <GridPane hgap="20.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" prefWidth="40.0"/>
                                <ColumnConstraints hgrow="NEVER" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                            </columnConstraints>
                            <children>
                                <ComboBox id="controllerComboBox" fx:id="controllerComboBox" GridPane.columnIndex="2"
                                          GridPane.rowIndex="1"/>
                                <ComboBox id="platformComboBox" fx:id="platFormComboBox" GridPane.columnIndex="2"/>
                                <Label fx:id="controllerName" text="Controller" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>
                                <Label fx:id="platformName" text="Platform" GridPane.columnIndex="1"/>
                                <ImageView fx:id="platFormImage" fitHeight="30" fitWidth="30">
                                    <Image url="@../../../icons/colorIcons-3/Controller.png"/>
                                </ImageView>
                            </children>
                        </GridPane>
                        <Pane fx:id="errorMsg" visible="false" />
                        <GridPane fx:id="usedDevice" hgap="20.0" vgap="10.0" visible="false">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" prefWidth="40.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0"/>
                                <ColumnConstraints hgrow="NEVER"/>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                            </columnConstraints>
                        </GridPane>
                        <VBox fx:id="cloudPlatformParameterSection" spacing="20" visible="false">
                            <Separator/>
                            <HBox>
                                <Label id="additionalLabel" text="Additional Settings"/>
                            </HBox>
                            <GridPane fx:id="cloudPlatformParameterPane" hgap="20" vgap="10">
                                <columnConstraints>
                                    <ColumnConstraints hgrow="NEVER" prefWidth="40.0"/>
                                    <ColumnConstraints hgrow="NEVER" minWidth="100.0"/>
                                    <ColumnConstraints hgrow="NEVER"/>
                                    <ColumnConstraints hgrow="NEVER"/>
                                </columnConstraints>
                            </GridPane>
                        </VBox>
                        <VBox fx:id="unusedDevice" spacing="20" visible="false">
                            <Separator/>
                            <HBox>
                                <Label id="unusedLabel" text="Unused devices"/>
                            </HBox>
                            <FlowPane fx:id="unusedDevicePane" hgap="10" vgap="10">
                            </FlowPane>
                        </VBox>
                        <padding>
                            <Insets left="50.0" right="40.0"/>
                        </padding>
                    </VBox>
                    <VBox.margin>
                        <Insets/>
                    </VBox.margin>
                    <padding>
                        <Insets top="10.0"/>
                    </padding>
                </ScrollPane>
            </children>
        </VBox>
        <ImageView id="close-button" fx:id="closeButton" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true"
                   preserveRatio="true" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0"/>
    </children>
</fx:root>
