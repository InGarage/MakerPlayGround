<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<fx:root stylesheets="@../../../css/dialog/generate/GenerateView.css" type="TabPane" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Tab fx:id="simulateTab" text="Connection Diagram">
        <AnchorPane>
            <ScrollPane maxHeight="600" fx:id="diagramScrollPane" AnchorPane.bottomAnchor="0.0"
                        AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0"
                        AnchorPane.topAnchor="15.0"/>
        </AnchorPane>
    </Tab>
    <Tab fx:id="codeDeviceTableTab" text="Sourcecode and Device list">
        <HBox spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <TextArea fx:id="codeTextArea" prefWidth="500.0"/>
            <TableView fx:id="deviceTable" prefWidth="500.0">
                <columns>
                    <TableColumn fx:id="nameColumn" editable="false" prefWidth="75.0" text="Name"/>
                    <TableColumn fx:id="brandColumn" prefWidth="75.0" text="Brand"/>
                    <TableColumn fx:id="modelColumn" prefWidth="75.0" text="Model"/>
                    <TableColumn fx:id="pinColumn" prefWidth="75.0" text="Pin"/>
                    <!--<TableColumn fx:id="urlColumn" prefWidth="75.0" text="URL" />-->
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>
            </TableView>
        </HBox>
    </Tab>
</fx:root>
