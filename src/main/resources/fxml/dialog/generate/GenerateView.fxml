<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>

<fx:root stylesheets="@../../../css/dialog/generate/GenerateView.css" type="TabPane"
         xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
    <tabs>
        <Tab id="ConnectionDiagramTab" closable="false" text="Connection Diagram">
            <HBox id="TabHBox">
                <children>
                    <ScrollPane fx:id="diagramScrollPane" id="diagramScrollPane" HBox.hgrow="ALWAYS"/>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </HBox>
        </Tab>
        <Tab id="DeviceListTab" closable="false" text="Device list">
            <HBox id="TabHBox">
                <children>
                    <TableView fx:id="deviceTable" id="deviceTableScrollPane" HBox.hgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="nameColumn" editable="false" prefWidth="75.0" text="Name"/>
                            <TableColumn fx:id="brandColumn" prefWidth="75.0" text="Brand"/>
                            <TableColumn fx:id="modelColumn" prefWidth="75.0" text="Model"/>
                            <TableColumn fx:id="pinColumn" prefWidth="75.0" text="Pin"/>
                            <!--<TableColumn fx:id="urlColumn" prefWidth="75.0" text="URL" />-->
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </HBox>
        </Tab>
        <Tab id="SourceCodeTab" closable="false" text="Sourcecode">
            <HBox id="TabHBox">
                <children>
                    <TextArea fx:id="codeTextArea" id="codeTextScrollPane" HBox.hgrow="ALWAYS"/>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </HBox>
        </Tab>
    </tabs>
</fx:root>
