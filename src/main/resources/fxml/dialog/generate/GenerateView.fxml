<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>
<fx:root stylesheets="@../../../css/dialog/generate/GenerateView.css" type="TabPane"
         xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <tabs>
        <Tab id="ConnectionDiagramTab" closable="false" text="Connection Diagram">
            <HBox id="TabHBox">
                <children>
                    <AnchorPane HBox.hgrow="ALWAYS">
                        <children>
                            <ScrollPane id="diagramScrollPane" fx:id="diagramScrollPane" pannable="true" AnchorPane.bottomAnchor="0"
                                        AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"/>
                            <VBox id="zoomControl" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">
                                <Button id="zoomInButton" fx:id="zoomInButton" prefHeight="25" prefWidth="25"/>
                                <Button id="zoomOutButton" fx:id="zoomOutButton" prefHeight="25" prefWidth="25"/>
                                <Pane prefHeight="9"/>
                                <Button id="zoomDefaultButton" fx:id="zoomDefaultButton" prefHeight="25"
                                        prefWidth="25"/>
                            </VBox>
                        </children>
                    </AnchorPane>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </HBox>
        </Tab>
        <Tab id="DeviceListTab" closable="false" text="Device list">
            <HBox id="TabHBox">
                <children>
                    <TableView fx:id="deviceTable" id="deviceTableScrollPane" HBox.hgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="nameColumn" editable="false" prefWidth="75.0" text="Name"/>
                            <TableColumn fx:id="brandColumn" prefWidth="75.0" text="Brand"/>
                            <TableColumn fx:id="modelColumn" prefWidth="75.0" text="Model"/>
                            <TableColumn fx:id="pinColumn" prefWidth="75.0" text="Pin"/>
                            <!--<TableColumn fx:id="urlColumn" prefWidth="75.0" text="URL" />-->
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                        </columnResizePolicy>
                    </TableView>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </HBox>
        </Tab>
        <Tab id="SourceCodeTab" closable="false" text="Sourcecode">
            <HBox id="TabHBox">
                <children>
                    <TextArea fx:id="codeTextArea" id="codeTextScrollPane" HBox.hgrow="ALWAYS"/>
                </children>
                <padding>
                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                </padding>
            </HBox>
        </Tab>
    </tabs>
</fx:root>
